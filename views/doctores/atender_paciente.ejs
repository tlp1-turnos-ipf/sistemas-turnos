<% if(login) { %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="../../resources/styles/pantalla_principal.css"
    />
    <link rel="stylesheet" href="../../resources/styles/estilo_tablas.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <title>Atencion al Paciente</title>
  </head>

  <body>
    <header class="header bg-primary">
      <a
        class="navbar-brand col-lg-4 me-0 h1 text-center"
        href="/doctores_pantalla_principal"
        ><img
          src="../../resources/img/inicio_sesion/logo.png"
          alt=""
          width="40px"
        />San Antonio</a
      >
    </header>

    <div class="overlay"></div>

    <main>
      <section>
        <button class="burger" type="button" onclick="toggleMenu()">
          <i class="fa-solid fa-bars"></i>
          <i class="fa-solid fa-close"></i>
        </button>

        <aside>
          <a href="#">Inicio</a>
          <a href="#">Solicitud de turno</a>
          <a href="#">Lista de turnos</a>
          <a href="#">Historia Clínica</a>
          <a href="#">Historial de turnos</a>
          <a href="/logout">Cerrar Sesion</a>
        </aside>
      </section>

      <section class="container-fluid">
        <div class="row m-0">
          <section class="col-lg-4 mt-5">
            <div class="d-flex justify-content-center">
              <h6>Paciente:</h6>
              <p><b> <%= nombres + " " + apellidos %></b></p>
            </div>
            <div class="shadow mb-5 bg-body rounded border">
              <div class="d-flex flex-wrap m-4">
                <p><b>DNI: </b></p>
                <p><%= dni %></p>
              </div>
              <div class="d-flex flex-wrap m-4">
                <p><b>Fecha Nacimiento: </b></p>
                <p><%= fecha_nac %></p>
              </div>

              <div class="d-flex flex-wrap m-4">
                <p><b>Sexo: </b></p>
                <p><%= descripcion_sexo %></p>
              </div>
              <div class="d-flex flex-wrap m-4">
                <p><b>Teléfono: </b></p>
                <p><%= telefono %></p>
              </div>
              <div class="d-flex flex-wrap m-4">
                <p><b>Descripción Problema: </b></p>
                <p><%= situacion %></p>
              </div>
            </div>
          </section>

          <section class="col-lg-8 mt-5">
            <div class="shadow mt-5 p-2 bg-body rounded">
              <p class="fs-5 border-bottom border-dark">Cargar Devolución</p>
              <form action="/doctor_devolucion_turno" method="post">
                <input
                  type="text"
                  name="turnos_id"
                  value="<%= id_turno %>"
                  hidden
                />
                <div class="input-group mb-2">
                  <span
                    class="input-group-text bg-dark text-white"
                    id="basic-addon1"
                    >Titulo</span
                  >
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Recetas"
                    aria-label="titulo"
                    aria-describedby="basic-addon1"
                    name="titulo"
                    required
                  />
                </div>

                <div class="input-group">
                  <span class="input-group-text bg-dark text-white"
                    >Descripción</span
                  >

                  <textarea
                    name="descripcion"
                    class="form-control"
                    aria-label="With textarea"
                    required
                  ></textarea
                  >
                </div>
                <div class="text-center mt-2">
                  <button type="submit" class="btn btn-primary">Cargar</button>
                </div>
              </form>
            </div>
            <div class="shadow mt-5 p-2 bg-body rounded">
              <p class="fs-5 border-bottom border-dark">Devoluciones</p>
              <div class="d-flex flex-wrap">
                <% results.forEach((users) => { %>
                <div class="card" style="max-width: 18rem">
                  <div class="card-body">
                    <h5 class="card-title"><%= users.titulo %></h5>
                    <a href="/editar_devolucion_doctor/<%= users.devolucion_id %>" class="btn btn-primary">Modificar</a>
                    <a href="/eliminar_devolucion_doctor/<%= users.devolucion_id %>" class="btn btn-danger">Eliminar</a>
                  </div>
                </div>
                <% }) %>
              </div>
              
            </div>
          </section>
        </div>
      </section>
    </main>

    <div class="container">
      <footer
        class="d-flex flex-wrap justify-content-between align-items-center py-1 border-top"
      >
        <span class="mb-md-0 text-body-secondary text-center"
          >© 2023 San Antonio, Centro de Atención</span
        >
      </footer>
    </div>

    <script src="../../resources/js/pantalla_principal.js"></script>

    <script
      src="https://kit.fontawesome.com/553a1bb38c.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
<% } %>
