<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="../../resources/styles/pantalla_principal.css"
    />
    <link rel="stylesheet" href="../../resources/styles/estilo_tablas.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <title>Lista de Turnos</title>
  </head>

  <body>
    <button class="burger" type="button" onclick="toggleMenu()">
      <i class="fa-solid fa-bars"></i>
      <i class="fa-solid fa-close"></i>
    </button>

    <aside>
      <a href="#">Inicio</a>
      <a href="#">Solicitud de turno</a>
      <a href="#">Lista de turnos</a>
      <a href="#">Historia Clínica</a>
      <a href="#">Historial de turnos</a>
      <a href="/logout">Cerrar Sesion</a>
    </aside>

    <main class="container-fluid m-0 p-0">
      <div class="d-flex">
        <nav
          style="
            background: linear-gradient(
              100deg,
              rgba(2, 0, 31, 0.945),
              70%,
              rgba(0, 0, 87, 0.9)
            );
          "
        >
          <div
            class="d-flex flex-column flex-shrink-0 pt-2"
            style="width: 230px; height: 100vh"
          >
            <a
              href="/"
              class="d-flex align-items-center mb-3 me-md-auto text-white text-decoration-none border-bottom"
            >
              <img
                src="../../resources/img/inicio_sesion/logo.png"
                alt="logo.png"
                width="70px"
              />
              <span class="fs-4">San Antonio</span>
            </a>
            <hr />
            <ul class="nav nav-pills flex-column mb-auto">
              <li class="nav-item">
                <a
                  href="/solicitar-turno"
                  class="nav-link text-white"
                  aria-current="page"
                >
                  <svg class="bi pe-none me-2" width="16" height="16">
                    <use xlink:href="#home"></use>
                  </svg>
                  Solicitar Turno
                </a>
              </li>
              <li class="nav-item">
                <a href="#" class="nav-link text-white" aria-current="page">
                  <svg class="bi pe-none me-2" width="16" height="16">
                    <use xlink:href="#home"></use>
                  </svg>
                  Listado de Turnos
                </a>
              </li>
              <li>
                <a href="#" class="nav-link text-white">
                  <svg class="bi pe-none me-2" width="16" height="16">
                    <use xlink:href="#speedometer2"></use>
                  </svg>
                  Devoluciones turno
                </a>
              </li>
              <li>
                <a href="#" class="nav-link text-white">
                  <svg class="bi pe-none me-2" width="16" height="16">
                    <use xlink:href="#speedometer2"></use>
                  </svg>
                  Reprogramar turno
                </a>
              </li>
            </ul>
          </div>
        </nav>
        <section class="w-100 fondo_principal">
          <div class="p-5" style="height: 1px; background: rgb(134, 146, 250)">
            <h3 class="text-light"><b>Doctores</b></h3>
          </div>

          <div
            class="my-3 shadow p-3 m-5 bg-body rounded border d-flex justify-content-center"
            style="background: rgb(230, 230, 230)"
          >
            <form action="/search" method="post">
              <div class="d-flex flex-grow border border-secondary rounded">
                <input
                  type="text"
                  id="form1"
                  name="buscar"
                  class="form-control"
                />
                <button
                  type="submit"
                  class="btn btn-secondary buscador"
                  id="buscador"
                  name=""
                >
                  Buscar
                </button>
              </div>
            </form>
          </div>

          <div class="main-table shadow m-5 bg-body rounded border">
            <article class="container">
              <div class="d-flex flex-wrap justify-content-center">
                <% results.forEach((users) => { %>

                <div class="card border-success m-3" style="min-width: 20rem">
                  <a
                    href="/seleccionar/fecha_turno/<%= users.doctor_id %>"
                    class="btn m-auto text-center tamanio fs-3"
                  >
                    <div class="card-header">Doctor</div>
                    <div class="card-body">
                      <h5 class="card-title doctores">
                        <%= users.dni + " - " +users.nombres + " " +
                        users.apellidos %>
                      </h5>
                    </div>
                  </a>
                </div>

                <% }) %>
              </div>
            </article>
          </div>
        </section>
      </div>
    </main>

    <div class="container">
      <footer
        class="d-flex flex-wrap justify-content-between align-items-center py-1 border-top"
      >
        <span class="mb-md-0 text-body-secondary text-center"
          >© 2023 San Antonio, Centro de Atención</span
        >
      </footer>
    </div>

    <script src="../../resources/js/pantalla_principal.js"></script>

    <script
      src="https://kit.fontawesome.com/553a1bb38c.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
