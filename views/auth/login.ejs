<%- include("../partials/header_principal.ejs") -%>

<main>
  <section class="container-fluid fondo">
    <div class="fondo2">
      <div class="container col-xl-10 col-xxl-8 px-4 py-5">
        <div class="row align-items-center g-lg-5 py-5">
          <div class="col-md-10 mx-auto col-lg-5">
            <form class="p-4 p-md-3 border rounded-3 bg-white" id="formLogin">
              <div
                class="m-3 text-center fw-bold d-flex justify-content-center align-items-center border-bottom"
              >
                <img src="img/inicio_sesion/logo.png" alt="" width="100px" />
                <p>Inicio de Sesión</p>
              </div>

              <p>Ingresa tus datos</p>

              <div class="form-floating mb-3">
                <input
                  type="email"
                  class="form-control border-primary"
                  id="email"
                  placeholder="juan123"
                  name="email"
                  required
                />
                <label for="floatingInput">Email</label>
              </div>

              <div class="form-floating mb-3">
                <input
                  type="password"
                  class="form-control border-primary"
                  id="password"
                  placeholder="Password"
                  name="password"
                  min="5"
                  max="15"
                  required
                />
                <label for="floatingPassword">Contraseña</label>
              </div>
              <button type="submit" class="w-100 btn btn-lg btn-primary">
                Continuar
              </button>
              <hr class="my-4" />
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<script src="/js/login/login.js"></script>

<%- include("../partials/footer_principal.ejs") -%>
